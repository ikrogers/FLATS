				<div class="slide-3"></div>
				<div class="hero">
					<div>
						<h2 style="text-align: center; color: white">Register!</h2>
						<%= render 'devise/registrations/regnew'%>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
