
<div id="cat">
<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="0" id="bs-carousel">
	<!-- Overlay -->
	<div class="overlay"></div>

	<!-- Indicators -->
	<ol class="carousel-indicators">
		<li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
		<li data-target="#bs-carousel" data-slide-to="1"></li>
		<li data-target="#bs-carousel" data-slide-to="2"></li>
	</ol>

	<!-- Wrapper for slides -->

	<div class="carousel-inner">
		<div class="item slides active">
			<div class="slide-1"></div>
			<div class="hero">
				<hgroup>
					<h1>First</h1>
					<h3>Description...........1</h3>
				</hgroup>
				<button class="btn btn-hero btn-lg" role="button">
					See all features
				</button>
			</div>
		</div>
		<div class="item slides">
			<div class="slide-2"></div>
			<div class="hero">
				<hgroup>
					<h1>Second</h1>
					<h3>Description...........2</h3>
				</hgroup>
				<button class="btn btn-hero btn-lg" role="button">
					See all features
				</button>
			</div>
		</div>
		<div class="item slides">
			<div class="slide-3"></div>
			<div class="hero">
				<hgroup>
					<h1>Third</h1>
					<h3>Description...........3</h3>
				</hgroup>
				<%= button_to "HURRR", new_user_registration_path, method: :get, class: "btn btn-hero btn-lg" %>
			</div>
		</div>
	</div>
</div>

</div> <!--  -->
<!--           CSS              -->

<style>
	#cat {
		left: 0;
		right: 0;
		position: absolute;
		min-width: 100%;
		min-height: 100%;
	}
	/********************************/
	/*       Fade Bs-carousel       */
	/********************************/
	.fade-carousel {
		position: relative;
		height: 100vh;
	}
	.fade-carousel .carousel-inner .item {
		height: 100vh;
	}
	.fade-carousel .carousel-indicators > li {
		margin: 50px;
		/*background-color: #f39c12;*/
		width: 30px;
		height: 30px;
		opacity: .3;
		background: white;
	}
	.fade-carousel .carousel-indicators > li.active {
		width: 39px;
		height: 20px;
		opacity: 1;
		background: white;
	}

	/********************************/
	/*          Hero Headers        */
	/********************************/
	.hero {
		position: absolute;
		top: 50%;
		left: 50%;
		z-index: 10;
		color: #fff;
		text-align: center;
		text-transform: uppercase;
		text-shadow: 1px 1px 0 rgba(0,0,0,.75);
		-webkit-transform: translate3d(-50%,-50%,0);
		-moz-transform: translate3d(-50%,-50%,0);
		-ms-transform: translate3d(-50%,-50%,0);
		-o-transform: translate3d(-50%,-50%,0);
		transform: translate3d(-50%,-50%,0);
	}
	.hero h1 {
		font-size: 6em;
		font-weight: bold;
		margin: 0;
		padding: 0;
	}

	.fade-carousel .carousel-inner .item .hero {
		opacity: 0;
		-webkit-transition: 2s all ease-in-out .1s;
		-moz-transition: 2s all ease-in-out .1s;
		-ms-transition: 2s all ease-in-out .1s;
		-o-transition: 2s all ease-in-out .1s;
		transition: 2s all ease-in-out .1s;
	}
	.fade-carousel .carousel-inner .item.active .hero {
		opacity: 1;
		-webkit-transition: 2s all ease-in-out .1s;
		-moz-transition: 2s all ease-in-out .1s;
		-ms-transition: 2s all ease-in-out .1s;
		-o-transition: 2s all ease-in-out .1s;
		transition: 2s all ease-in-out .1s;
	}

	/********************************/
	/*            Overlay           */
	/********************************/

	/********************************/
	/*          Custom Buttons      */
	/********************************/
	.btn.btn-lg {
		padding: 10px 40px;
	}
	.btn.btn-hero, .btn.btn-hero:hover, .btn.btn-hero:focus {
		color: #f5f5f5;
		background-color: #1abc9c;
		border-color: #1abc9c;
		outline: none;
		margin: 20px auto;
	}

	/********************************/
	/*       Slides backgrounds     */
	/********************************/
	.fade-carousel .slides .slide-1, .fade-carousel .slides .slide-2, .fade-carousel .slides .slide-3 {
		height: 100vh;
		background-size: cover;
		background-position: center center;
		background-repeat: no-repeat;
	}
	.fade-carousel .slides .slide-1 {
		background-image: url(/assets/theme1.jpg);
	}
	.fade-carousel .slides .slide-2 {
		background-image: url(/assets/theme2.jpg);
	}
	.fade-carousel .slides .slide-3 {
		background-image: url(/assets/bike.jpg);
	}

	/********************************/
	/*          Media Queries       */
	/********************************/
	@media screen and (min-width: 900px) {
		.hero {
			width: 900px;
		}
	}
	@media screen and (max-width: 600px) {
		.hero h1 {
			font-size: 4em;
		}
	}
</style>
