<h2>Sign up</h2>
<div class="form-horizontal">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :fname %><br />
    <%= f.text_field :fname, autofocus: true %></div>
    
  <div><%= f.label :lname %><br />
    <%= f.text_field :lname %></div>
    
  <div><%= f.label :weight %><i> in pounds</i><br />
    <%= number_field(:user, :weight, in: 50..400, step: 1.0) %></div>
    
  <div><%= f.label :height %><i> in inches</i><br />
    <%= number_field(:user, :height, in: 36..96, step: 0.5) %></div>
  
  <div><%= f.label :bday, "Date of Birth" %><br />
    <%= date_field(:user, :bday) %></div>
  
  <div><%= f.label :email %><br />
    <%= f.email_field :email %></div>

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= radio_button_tag(:gender, "male") %>
        <%= label_tag(:gender, "Male") %>
        <%= radio_button_tag(:gender, "female") %>
        <%= label_tag(:gender, "Female") %></div>
        
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>