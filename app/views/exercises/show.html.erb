<p id="notice"><%= notice %></p>
<div class="panel panel-primary" style="max-width: 40%;margin: auto;">
 <div class="panel-heading">
    <%= @exercise.name %>
 </div>

<p>
  <strong><center>Description:</center></strong>
  <%= simple_format h @exercise.descr %>
</p>

<p>
  <strong><center>Calories: <%= @exercise.calories %></center></strong>
  
</p>

<p>
  <strong><center>Intensity Level: <%= @exercise.intensity %></center></strong>
  
</p>

<p>
  <strong><center>Example Video:</center></strong><br />
  <iframe width="100%" height="315px" src="//www.youtube.com/embed/<%= @exercise.video %>" frameborder="0" allowfullscreen></iframe> 
</p>
<center>
    <% if current_user.u_type > 1 %>
      <%= link_to 'Edit', edit_exercise_path(@exercise) %>|      
      <%= link_to 'Index', exercises_path %>

    <% end %>
</center>
</div>
<!-- Button trigger modal -->
<br>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>