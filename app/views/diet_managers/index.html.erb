<div style="width: 60%; margin-left: 20%;">
  <center>
    <h3>My diets</h3>
  </center>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th>User</th>
        <th>Diet</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @diet_managers.each do |diet_manager| %>
        <tr>
          <td><%= diet_manager.user.fullname %></td>
          <td><%= diet_manager.diet.name %></td>
          <td class="danger"><%= link_to 'Remove meal', diet_manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Add meal', new_diet_manager_path, :class => "btn btn-default" %>
</div>