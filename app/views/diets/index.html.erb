<div>
  <center>
    <h3>Listing diets</h3>
  </center>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Fname</th>
        <th>Description</th>
        <th>Calories</th>
        <th>Controlls</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @diets.each do |diet| %>
        <tr>
          <td><%= diet.name %></td>
          <td><%= diet.descr %></td>
          <td><%= diet.calories %></td>
          <td><%= button_to 'Show', diet, method: :get, class: 'btn btn-info' %></td>
          <td><%= button_to 'Edit', edit_diet_path(diet), method: :get, class: 'btn btn-warning' %></td>
          <td class="danger"><%= button_to 'Destroy', diet, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= button_to 'New Diet', new_diet_path, method: :get, :class => "btn btn-success btn-block" %><br>
</div>